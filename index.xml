<?xml version="1.0" encoding="UTF-8" ?>	

  <Module>	

    <ModulePrefs title="Hangout to ROS Demo">	
      <Require feature="rpc"/>	
      <Require feature="views"/>	
    </ModulePrefs>	
    <Content type="html">	
      <![CDATA[	
 	<style media="screen" type="text/css">
	html,
	body {
		color: blue;
		margin:0;
		padding:0;
		height:100%;
	}

	#body {
		padding:10px;
		padding-bottom:60px;	/* Height of the footer */
	}
	#input {
		color: blue;
		position:absolute;
		bottom:0;
		
		height:60px;			/* Height of the footer */
		background:#000000;
	}
	#id {
	
	color: blue;
	background:#000000;
	}
	
	
	/* other non-essential CSS */
	#input p {
		margin:0;
		padding:10px;
	}
	</style>
       	<div id="container" style="width: 100%; overflow: hidden; background-color:#000000">
       	<div style="width: 25%; float: left; background-color:#000000">
        <h1>Hangout to ROS Demo</h1>	
        <div id="available">People Available in Chat</div>
        <div id="chat" style="text-align:left; border:1px color:#0000FF overflow-y: auto; height: 200px">Chat Previous</div>
        <button id="sendMessage">Send Message</button>	
        </div>
        <div id="input" contenteditable="true">Chat Here</div>
        <div style="margin-left: 620px; background-color:#000000">Right</div>
        </div>
        
		<script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
        <script type="text/javascript" src="https://rawgit.com/asyncly/EventEmitter2/master/lib/eventemitter2.js"></script>
		<script type="text/javascript" src="https://rawgit.com/RobotWebTools/roslibjs/develop/build/roslib.min.js"></script>	
		<script type="text/javascript" src="https://rawgit.com/tesYolan/rostogapi_final/master/scripts/ros.js"/>
	    
      ]]>	
    </Content>	
  </Module>
