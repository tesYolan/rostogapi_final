  <Module>	

    <ModulePrefs title="Hangout to ROS Demo">	
      <Require feature="rpc"/>	
      <Require feature="views"/>	
    </ModulePrefs>	
    <Content type="html">	
      <![CDATA[	
 	<style media="screen" type="text/css">
	html,
	

	#container {
		color: white; 
		
		padding-bottom:60px;	/* Height of the footer */
		height:100%;
	}
	#input {
		color: blue;
		position:absolute;
		bottom:0;
		width:25%;
		height:60px;			/* Height of the footer */
		background:#000000;
		border: solid 1px #e1e1e1;
	}
	#id {
	
	color: blue;
	background:#000000;
	border: 1px;
	 solid red
	}
	
	
	
